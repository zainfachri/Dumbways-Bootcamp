<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Add Game</title>
</head>
<body>
    <header>
        <div class="header-left">
            <h1>DW-<span>Game Center</span></h1>
        </div>
        <div class="header-right">
        </div>
    </header>

    <div class="main add">
    <form action="/create" method="post">
        <input name="gameTitle" type="text" placeholder="Judul Game">
        <input name="gameImg" type="text" placeholder="img1.jpg">
        <select name="gameGenre" id="">
            <option value="0">--Pilih--</option>
            <% genre.forEach((gem) => { %>
            <option value="<%= gem.id %>"><%= gem.name %></option>
            <% }) %>
        </select>
        <input type="submit" value="Tambahkan">
    </form>
    <a href="/" class="cancel">Kembali</a>
    </div>
</body>
</html>